@model FEUEM_CAP.Models.NivelAcademico

@{
    ViewBag.Title = "EditarNAcademico";
}

<h2>Actualizar nível académico</h2>


@using (Html.BeginForm("EditarNAcdemico", "NivelAcademico", FormMethod.Post, new { id = "formCrud" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>NivelAcademico</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.NivelAcademicoId)

        <div class="form-group">
            @Html.LabelFor(model => model.DescricaoNivelAcademico, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescricaoNivelAcademico, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescricaoNivelAcademico, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <a id="botaoDeAccao" href="#" class="btn btn-success")>
                <span class="glyphicon glyphicon-refresh"></span>
                Actualizar
            </a>
        </div>
    </div>
}

<hr />
<br />
<a id="DetalhesModal" href="#" class="btn btn-primary" )>
    <span class="glyphicon glyphicon-remove"></span>
    fechar
</a>
<script src="~/Scripts/Costumizados/EnvioDeFormulario.js"></script>
<script src="~/Scripts/Costumizados/FecharModal.js"></script>
@Scripts.Render("~/bundles/jqueryval")
