@model FEUEM_CAP.Models.NivelAcademico

@{
    ViewBag.Title = "RemoverNAcademico";
}

<h2>Remover nível académico</h2>
<h4 id="DescForm">
    Formulário de remoção de curso
</h4>
<hr />
<h3 style="color: red; font-weight: bold;">Tem certeza que deseja remover este nível académico?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DescricaoNivelAcademico)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DescricaoNivelAcademico)
        </dd>

    </dl>

    @using (Html.BeginForm("RemoverNAcademico", "NivelAcademico", FormMethod.Post, new { id = "formCrud" }))
    {
        @Html.AntiForgeryToken()
        <br />
        <hr />
        <div class="form-actions no-color">
            <a id="botaoDeAccao" href="#" class="btn btn-danger" style="left: 30%;">
                <span class="glyphicon glyphicon-trash"></span>
                Remover
            </a>
        </div>
        <hr/>
        <a id="DetalhesModal" href="#" class="btn btn-primary")>
            <span class="glyphicon glyphicon-remove"></span>
            fechar
        </a>
    }
</div>
<script src="~/Scripts/Costumizados/FormApagar.js"></script>
<script src="~/Scripts/Costumizados/FecharModal.js"></script>
