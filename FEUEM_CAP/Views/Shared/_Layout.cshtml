<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FUEM_ePresence - @ViewBag.Title  </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/jquery.bootgrid.css" rel="stylesheet" />
</head>
<body>
<div class="toastr">
    <input type="hidden" id="success"
           value="@TempData["success"]" />
    <input type="hidden" id="info"   
           value="@TempData["info"]" />
    <input type="hidden" id="warning"
           value="@TempData["warning"]" />
    <input type="hidden" id="error"
           value="@TempData["error"]" />
</div>
<div id="NavBar" class="navbar navbar-inverse navbar-fixed-top" style="cursor: pointer;">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("FEUEM e-Presence", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @*<li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">Departamento<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Cursos", "Index", "Curso")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Departamentos", "Index", "Departamento")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Disciplinas", "Index", "Disciplinas")</li>
                    </ul>
                </li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown">Docente<b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>@Html.ActionLink("Categoria", "Index", "Categoria")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Docentes", "Index", "Docente")</li>
                        <li class="divider"></li>
                        <li>@Html.ActionLink("Nivel Académico", "Index", "NivelAcademico")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
<div class="container body-content">
    @RenderBody()
    <hr/>
    <footer>
        <p id="Footer">Todos direitos reservados &copy; @DateTime.Now.Year - FEUEM e-Presence</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
