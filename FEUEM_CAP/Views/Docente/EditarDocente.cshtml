@model FEUEM_CAP.Models.Docente

@{
    ViewBag.Title = "EditarDocente";
}

<h2>Actualizar dados do docente</h2>


@using (Html.BeginForm("EditarDocente","Docente",FormMethod.Post,new {id="formCrud"}))
{
    @Html.AntiForgeryToken()
   

    <div class="form-horizontal">
        <h4 id="DescForm">
            Formulário de actalização de dados do docente
        </h4>
        <hr />
        <div></div>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DocenteId)

        <a id="DescCollapse" class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseDP">
            Dados pessoais
        </a>
        
        <div id="collapseDP" class="panel-collapse collapse">
            <hr />
            <div id="DadosPessoais">
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeDocente, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.NomeDocente, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.NomeDocente, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ApelidoDocente, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ApelidoDocente, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ApelidoDocente, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ContactoTelefone, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ContactoTelefone, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ContactoTelefone, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ContactoEmail, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ContactoEmail, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ContactoEmail, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <hr />
        </div>

        <a id="DescCollapse" class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseDB">
            Dados bancários
        </a>

        <div id="collapseDB" class="panel-collapse collapse">
            <hr />
            <div id="DadosBancarios">
                <div class="form-group">
                    @Html.LabelFor(model => model.Nuit, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Nuit, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Nuit, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Nib, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Nib, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Nib, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NumeroConta, htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.NumeroConta, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.NumeroConta, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
            <hr />
        </div>
        
        <a id="DescCollapse" class="accordion-toggle collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseDA">
            Dados académicos
        </a>
        
        <div id="collapseDA" class="panel-collapse collapse">
            <hr />
            <div id="DadosAcademicos">
                <div class="form-group">
                    @Html.LabelFor(model => model.CategoriaId, "Nome da categoria", htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.DropDownList("CategoriaId", null, htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new {@class = "text-danger"})
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.NivelAcademicoId, "Nível académico", htmlAttributes: new {@class = "control-label col-md-4"})
                    <div class="col-md-8">
                        @Html.DropDownList("NivelAcademicoId", null, htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.NivelAcademicoId, "", new {@class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <hr/>
        <div class="form-group">
            <a id="botaoDeAccao" href="#" class="btn btn-success" style="position: relative; left: 35%;">
                <span class="glyphicon glyphicon-refresh"></span>
                Actualizar
            </a>
        </div>
    </div>
}
<hr />
<br />
<a id="DetalhesModal" href="#" class="btn btn-primary" )>
    <span class="glyphicon glyphicon-remove"></span>
    fechar
</a>
<script src="~/Scripts/Costumizados/EnvioDeFormulario.js"></script>
<script src="~/Scripts/Costumizados/FecharModal.js"></script>
@Scripts.Render("~/bundles/jqueryval")
