@model FEUEM_CAP.Models.Docente

@{
    ViewBag.Title = "Adicionar docente";
}

<h2>Adição de novo docente</h2>


@using (Html.BeginForm("AdicionarDocente","Docente",FormMethod.Post,new { id= "formCrudDocente" }))
{
    @Html.AntiForgeryToken()
    
    <div class="panel panel-body">
        <div class="form-horizontal" id="FormDocente">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset id="dadosPessoais">
                <legend>Dados Pessoais </legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.NomeDocente, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.NomeDocente, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.NomeDocente, "", new {@class = "text-danger"})
                    </div>
                    @Html.LabelFor(model => model.ApelidoDocente, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.ApelidoDocente, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ApelidoDocente, "", new {@class = "text-danger"})
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ContactoTelefone, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.ContactoTelefone, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ContactoTelefone, "", new {@class = "text-danger"})
                    </div>
                    @Html.LabelFor(model => model.ContactoEmail, htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.EditorFor(model => model.ContactoEmail, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.ContactoEmail, "", new {@class = "text-danger"})
                    </div>
                </div>
                <hr />
            </fieldset>
            <fieldset id="DadosBanco">
                <legend>Dados Bancários</legend>
                <div class="form-group">
                    @Html.LabelFor(model => model.Nuit, htmlAttributes: new {@class = "control-label col-sm-1"})
                    <div class="col-sm-2">
                        @Html.EditorFor(model => model.Nuit, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Nuit, "", new {@class = "text-danger"})
                    </div>
                    @Html.LabelFor(model => model.Nib, htmlAttributes: new {@class = "control-label col-sm-1"})
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.Nib, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.Nib, "", new {@class = "text-danger"})
                    </div>
                    @Html.LabelFor(model => model.NumeroConta, htmlAttributes: new {@class = "control-label col-sm-2"})
                    <div class="col-sm-3">
                        @Html.EditorFor(model => model.NumeroConta, new {htmlAttributes = new {@class = "form-control"}})
                        @Html.ValidationMessageFor(model => model.NumeroConta, "", new {@class = "text-danger"})
                    </div>
                </div>
                <hr />
            </fieldset>
            <fieldset id="DadosFormacao">
                <legend>Dados de formação</legend>
                <div class="form-group">
                    
                        @Html.LabelFor(model => model.CategoriaId, "Categoria", htmlAttributes: new {@class = "control-label col-md-2"})
                    <div class="col-md-3">
                        @Html.DropDownList("CategoriaId", null, htmlAttributes: new {@class = "form-control"})
                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new {@class = "text-danger"})
                    </div>
                    <div class="col-md-1">
                        <a id="AddNovo" data-action="AdicionarCategoria" class="btn btn-success categoria" style="position: relative; left: -20px;">
                            <span class="glyphicon glyphicon-plus"></span>
                        </a>
                    </div>
                    <div>
                        @Html.LabelFor(model => model.NivelAcademicoId, "Nível académico", htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-3">
                            @Html.DropDownList("NivelAcademicoId", null, htmlAttributes: new {@class = "form-control"})
                            @Html.ValidationMessageFor(model => model.NivelAcademicoId, "", new {@class = "text-danger"})
                            <a id="AddNovo" data-action="AdicionarNAcademico" class="btn btn-success NAcademico">
                                <span class="glyphicon glyphicon-plus"></span>
                            </a>
                        </div>
                    </div>
                    <br/>
                </div>
            </fieldset>
            <hr/>
            <div class="form-group">
                <a id="Novo" href="@Url.Action("Index")" class="btn btn-primary" style="position: relative; left: 10%">
                    <span class="glyphicon glyphicon-arrow-left"></span>
                    Voltar
                </a>
                <a id="gravarDocente" href="#" class="btn btn-success add" style="position: relative; left: 70%">
                    <span class="glyphicon glyphicon-floppy-saved"></span>
                    Gravar
                </a>
            </div>
            
        </div>
   </div>
}
<div class="modal fade" id="minhaModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div id="conteudoModal"></div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-1.11.1.js"></script>
<script src="~/Scripts/Costumizados/GravarDocente.js"></script>
@Scripts.Render("~/bundles/jqueryval")

