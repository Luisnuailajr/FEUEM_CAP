@model FEUEM_CAP.Models.Departamento

@{
    ViewBag.Title = "EditarDepartamento";
}

<h2>Actualizar departamento</h2>


@using (Html.BeginForm("EditarDepartamento", "Departamento", FormMethod.Post, new { id = "formCrud" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <h4 id="DescForm">
            Formulário de actalização de departamento
        </h4>
        <hr />
        <fieldset id="FormularioActualiza">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.DepartamentoId)

            <div class="form-group">
                @Html.LabelFor(model => model.NomeDepartamento, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.NomeDepartamento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.NomeDepartamento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Sigla, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Sigla, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Sigla, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    @*<input type="button" value="Actualizar" class="btn btn-success" style="position: relative; left: 21%;" />*@
                    <a id="botaoDeAccao" href="#" class="btn btn-success")>
                        <span class="glyphicon glyphicon-refresh"></span>
                        Actualizar
                    </a>
                </div>
            </div>
        </fieldset>
</div>
}
<hr />
<br />
<a id="DetalhesModal" href="#" class="btn btn-primary" )>
    <span class="glyphicon glyphicon-remove"></span>
    fechar
</a>

@Scripts.Render("~/bundles/jqueryval")
<script src="~/Scripts/Costumizados/EnvioDeFormulario.js"></script>
<script src="~/Scripts/Costumizados/FecharModal.js"></script>
